<style>
  /* ----------------------------------
		 Theme variables
		 ---------------------------------- */
  :root {
    --bg: #0d0208;
    --panel: #3a3a3c;
    --muted: #8584848f;
    --gold: #b59f3b;
    --silver: #787c7e;
    --bronze: #a56a46;
    --muted-gold: #b59f3bce;
    --text: #f8f8f8;
    --border: #78787d;
    --soft-shadow: rgba(136, 136, 144, 0.12);
    --green-bright: #00ff41;
    --green-mid: #008f11;
    --green-dark: #003b00;
    --white: #ffffff;
  }

  body {
    font-family: 'Courier Prime', monospace;
    font-weight: 400;
    font-style: normal;
    font-size: 26px;
    color: var(--green-bright);
    text-shadow:
      1px 1px 4px var(--green-mid),
      -1px -1px 4px var(--green-mid);
    background-color: var(--bg);
    width: 1200px;
    padding: 10px;
  }

  .scoreboard {
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    width: 100%;
    border: 1px solid var(--green-bright);
  }

  .player-entry {
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: var(--bg);
    border: 1px solid var(--green-bright);
    border-left: 3px solid var(--green-bright);
  }

  .progress-bar {
    height: 3rem;
    width: 60%;
    background-color: var(--bg);

    display: flex;
    align-items: center;
    padding: 0 0.75rem;
    gap: 0.75rem;
  }

  p.score {
    margin: 0;
    text-wrap: nowrap;
    font-weight: bold;
    min-width: 2.5rem;
  }

  .segments-container {
    flex: 1;
    height: 2.25rem;
    position: relative;
    background: repeating-linear-gradient(
      90deg,
      var(--green-dark) 0px,
      var(--green-dark) 8px,
      transparent 8px,
      transparent 12px
    );
    border: 1px solid var(--green-mid);
  }

  .segments-fill {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background: repeating-linear-gradient(
      90deg,
      var(--green-bright) 0px,
      var(--green-bright) 8px,
      transparent 8px,
      transparent 12px
    );
    filter: drop-shadow(0 0 3px var(--green-bright))
      drop-shadow(0 0 8px var(--green-bright));
  }

  .segments-fill::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.2) 0%,
      transparent 50%,
      rgba(0, 0, 0, 0.2) 100%
    );
  }

  .player-details {
    display: flex;
    width: 35%;
    justify-content: space-between;
    align-items: center;
  }

  .position {
    display: flex;
    align-items: center;
  }

  .score-section {
    height: 4rem;
    display: flex;
    align-items: center;
    padding: 0 0.5rem;
    font-weight: bold;
    gap: 5px;
    backdrop-filter: blur(5px);
    border-bottom: 1px solid var(--green-bright);
    border-right: 1px solid var(--green-bright);
    box-shadow: 3px 3px 3px var(--green-mid);
  }

  h3.name {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    text-shadow:
      1px 1px 4px var(--green-mid),
      -1px -1px 4px var(--green-mid);
  }
</style>
<head>
  <link rel='preconnect' href='https://fonts.googleapis.com' />
  <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
  <link
    href='https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&display=swap'
    rel='stylesheet'
  />
</head>
<body>
  <div class='scoreboard'>
    {{#each players}}
      <div class='player-entry'>
        <div class='player-details'>
          <div class='position'>
            <h2>{{{position}}}</h2>
            {{{positionDelta}}}
          </div>
          <h3 class='name'>{{name}}_</h3>
          <div class='score-section'>
            <p>+{{latestScore}}</p>
            {{{emoji}}}
          </div>
        </div>
        <div class='progress-bar'>
          <p
            class='score'
            style='color: {{color}}; text-shadow: 4px 4px 10px {{color}}, -4px -4px 10px {{color}};'
          >{{totalScore}}</p>
          <div class='segments-container'>
            <div
              class='segments-fill'
              style='width: {{scorePercentage}}%;'
            ></div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

</body>